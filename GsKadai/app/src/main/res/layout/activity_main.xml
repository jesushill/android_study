<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.kenyamamoto.gskadai02.MainActivity"
    android:background="#ffffff"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自己紹介登録ページ"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.18"
        android:weightSum="1"
        android:nestedScrollingEnabled="false">

        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="名前を記入して下さい"
            android:id="@+id/name"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="名前を記入して下さい"
            android:id="@+id/edit_name"
            android:layout_gravity="center_horizontal"
            android:background="#a09c9c" />
        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="メールアドレスを記入して下さい"
            android:id="@+id/address"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="アドレスをここに記入して下さい"
            android:id="@+id/edit_address"
            android:layout_gravity="center_horizontal"
            android:background="#a09c9c" />
        <TextView
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="年齢を記載して下さい"
            android:id="@+id/age"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="年齢をここに記入して下さい"
            android:id="@+id/edit_age"
            android:layout_gravity="center_horizontal"
            android:background="#a09c9c" />

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/radio"
            android:layout_weight="0.37"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="男"
                android:checked="true"
                android:id="@+id/radio_man" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                android:text="女"
                android:id="@+id/radio_female" />
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入力！！"
            android:onClick="onClickButton"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:background="#b26262"
            />


    </LinearLayout>


</LinearLayout>
